@model MunDev.Models.ProyectoUsuario

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ProyectoUsuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Proyecto" class="control-label"></label>
                <select asp-for="Proyecto" class="form-control" asp-items="ViewBag.ProyectoId"></select>
                <span asp-validation-for="Proyecto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <select asp-for="Usuario" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RolEnProyecto" class="control-label"></label>
                <select asp-for="RolEnProyecto" class="form-control" asp-items="ViewBag.Roles">
                    <option value="">-- Seleccione un Rol --</option>
                </select>
                <span asp-validation-for="RolEnProyecto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
