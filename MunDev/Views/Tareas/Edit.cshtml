@model MunDev.Models.Tarea

@{
    ViewData["Title"] = "Editar Tarea";
}

<h1 class="display-4 mb-4 text-primary">
    <i class="bi bi-pencil-square"></i> @ViewData["Title"]
</h1>

<h4 class="mb-3">Información de la Tarea</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="TareaId" />

                <div class="form-group mb-3">
                    <label asp-for="ProyectoId" class="form-label"></label>
                    <select asp-for="ProyectoId" class="form-control" asp-items="ViewBag.ProyectoId"></select>
                    <span asp-validation-for="ProyectoId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Titulo" class="form-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaVencimiento" class="form-label"></label>
                    <input asp-for="FechaVencimiento" class="form-control" type="date" />
                    <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EstadoTarea" class="form-label"></label>
                    <select asp-for="EstadoTarea" class="form-control" asp-items="ViewBag.EstadoTareaOptions"></select>
                    <span asp-validation-for="EstadoTarea" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Prioridad" class="form-label"></label>
                    <select asp-for="Prioridad" class="form-control" asp-items="ViewBag.PrioridadOptions"></select>
                    <span asp-validation-for="Prioridad" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AsignadoAusuarioId" class="form-label"></label>
                    <select asp-for="AsignadoAusuarioId" class="form-control" asp-items="ViewBag.AsignadoAusuarioId"></select>
                    <span asp-validation-for="AsignadoAusuarioId" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" value="Save" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
