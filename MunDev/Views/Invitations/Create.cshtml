@model MunDev.Models.Invitation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Invitation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InvitedEmail" class="control-label"></label>
                <input asp-for="InvitedEmail" class="form-control" />
                <span asp-validation-for="InvitedEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvitationToken" class="control-label"></label>
                <input asp-for="InvitationToken" class="form-control" />
                <span asp-validation-for="InvitationToken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvitedByUserId" class="control-label"></label>
                <select asp-for="InvitedByUserId" class ="form-control" asp-items="ViewBag.InvitedByUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EquipoId" class="control-label"></label>
                <select asp-for="EquipoId" class ="form-control" asp-items="ViewBag.EquipoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateSent" class="control-label"></label>
                <input asp-for="DateSent" class="form-control" />
                <span asp-validation-for="DateSent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAccepted" /> @Html.DisplayNameFor(model => model.IsAccepted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AcceptedByUserId" class="control-label"></label>
                <select asp-for="AcceptedByUserId" class ="form-control" asp-items="ViewBag.AcceptedByUserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
