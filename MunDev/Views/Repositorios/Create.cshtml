@model MunDev.Models.Repositorio

@{
    ViewData["Title"] = "Añadir Nuevo Repositorio";
}

<h1 class="display-4 mb-4 text-primary">
    <i class="bi bi-plus-circle"></i> @ViewData["Title"]
</h1>

<h4 class="mb-3">Información del Repositorio</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        @* Limita el ancho del formulario en pantallas grandes *!*@
        <div class="card shadow-sm p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="ProyectoId" class="form-label"></label>
                    <select asp-for="ProyectoId" class="form-control" asp-items="ViewBag.ProyectoId">
                        <option value="">-- Seleccione un Proyecto --</option>
                    </select>
                    <span asp-validation-for="ProyectoId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NombreRepositorio" class="form-label"></label>
                    <input asp-for="NombreRepositorio" class="form-control" placeholder="Ej: mi-proyecto-backend" />
                    <span asp-validation-for="NombreRepositorio" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="RepositorioUrl" class="form-label"></label>
                    <input asp-for="RepositorioUrl" class="form-control" placeholder="Ej: https://github.com/tuusuario/nombre-repo" />
                    <span asp-validation-for="RepositorioUrl" class="text-danger"></span>
                </div>

                @* FechaCreacion se establecerá en el controlador (DateTime.Now), no se necesita input aquí *!*@
                @* <div class="form-group mb-3">
                    <label asp-for="FechaCreacion" class="form-label"></label>
                    <input asp-for="FechaCreacion" class="form-control" type="datetime-local" />
                    <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                </div> *!*@

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Repositorio
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
