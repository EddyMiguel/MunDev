@model MunDev.Models.Repositorio

@{
    ViewData["Title"] = "Editar Repositorio";
}

<h1 class="display-4 mb-4 text-primary">
    <i class="bi bi-pencil-square"></i> @ViewData["Title"]
</h1>

<h4 class="mb-3">Información del Repositorio</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="RepositorioId" /> @* Campo oculto para el ID del repositorio *!*@

                <div class="form-group mb-3">
                    <label asp-for="ProyectoId" class="form-label"></label>
                    <select asp-for="ProyectoId" class="form-control" asp-items="ViewBag.ProyectoId"></select>
                    <span asp-validation-for="ProyectoId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NombreRepositorio" class="form-label"></label>
                    <input asp-for="NombreRepositorio" class="form-control" />
                    <span asp-validation-for="NombreRepositorio" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="RepositorioUrl" class="form-label"></label>
                    <input asp-for="RepositorioUrl" class="form-control" />
                    <span asp-validation-for="RepositorioUrl" class="text-danger"></span>
                </div>

                @* FechaCreacion se asigna en el controlador, no se necesita input *!*@
                @* <div class="form-group mb-3">
                    <label asp-for="FechaCreacion" class="form-label"></label>
                    <input asp-for="FechaCreacion" class="form-control" type="datetime-local" readonly />
                    <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                </div> *!*@

                <div class="form-group mt-4">
                    <button type="submit" value="Save" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
