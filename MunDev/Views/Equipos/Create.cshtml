@model MunDev.Models.Equipo

@{
    ViewData["Title"] = "Crear Nuevo Equipo";
}

<h1 class="display-4 mb-4 text-primary">
    <i class="bi bi-plus-circle"></i> @ViewData["Title"]
</h1>

<h4 class="mb-3">Información del Equipo</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="NombreEquipo" class="form-label"></label>
                    <input asp-for="NombreEquipo" class="form-control" placeholder="Ej: Equipo de Desarrollo Ágil" />
                    <span asp-validation-for="NombreEquipo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Describe los objetivos y miembros del equipo..."></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                @* REMOVIDO: CreadoPorUsuarioId se asigna automáticamente en el controlador *!*@

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Equipo
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
