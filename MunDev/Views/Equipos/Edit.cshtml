@model MunDev.Models.Equipo

@{
    ViewData["Title"] = "Editar Equipo";
}

<h1 class="display-4 mb-4 text-primary">
    <i class="bi bi-pencil-square"></i> @ViewData["Title"]
</h1>

<h4 class="mb-3">Información del Equipo</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="EquipoId" /> @* Campo oculto para el ID del equipo *!*@

                <div class="form-group mb-3">
                    <label asp-for="NombreEquipo" class="form-label"></label>
                    <input asp-for="NombreEquipo" class="form-control" />
                    <span asp-validation-for="NombreEquipo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                @* REMOVIDO: CreadoPorUsuarioId no se edita en el formulario, se mantiene desde el original en el controlador *!*@
                @* <div class="form-group mb-3">
                    <label asp-for="CreadoPorUsuarioId" class="form-label"></label>
                    <select asp-for="CreadoPorUsuarioId" class="form-control" asp-items="ViewBag.CreadoPorUsuarioId"></select>
                    <span asp-validation-for="CreadoPorUsuarioId" class="text-danger"></span>
                </div> *!*@

                <div class="form-group mt-4">
                    <button type="submit" value="Save" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
