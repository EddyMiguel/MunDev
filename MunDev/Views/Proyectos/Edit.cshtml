@model MunDev.Models.Proyecto

@{
    ViewData["Title"] = "Editar Proyecto";
}

<h1 class="display-4 mb-4 text-primary">
    <i class="bi bi-pencil-square"></i> @ViewData["Title"]
</h1>

<h4 class="mb-3">Información del Proyecto</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="ProyectoId" /> @* Campo oculto para el ID del proyecto *!*@

                <div class="form-group mb-3">
                    <label asp-for="NombreProyecto" class="form-label"></label>
                    <input asp-for="NombreProyecto" class="form-control" />
                    <span asp-validation-for="NombreProyecto" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaInicio" class="form-label"></label>
                    <input asp-for="FechaInicio" class="form-control" type="date" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaFinEstimada" class="form-label"></label>
                    <input asp-for="FechaFinEstimada" class="form-control" type="date" />
                    <span asp-validation-for="FechaFinEstimada" class="text-danger"></span>
                </div>

                @* FechaCreacion se gestiona en el controlador, no se necesita input *!*@
                @* CreadoPorUsuarioId se gestiona en el controlador, no se necesita input *!*@

                <div class="form-group mb-3">
                    <label asp-for="EstadoProyecto" class="form-label"></label>
                    <select asp-for="EstadoProyecto" class="form-control">
                        <option value="">-- Seleccione un estado --</option>
                        <option value="Activo">Activo</option>
                        <option value="Pendiente">Pendiente</option>
                        <option value="Culminado">Culminado</option>
                    </select>
                    <span asp-validation-for="EstadoProyecto" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EquipoId" class="form-label"></label>
                    <select asp-for="EquipoId" class="form-control" asp-items="ViewBag.EquipoId">
                        <option value="">-- Seleccione un Equipo (Opcional, para proyecto personal) --</option>
                    </select>
                    <span asp-validation-for="EquipoId" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" value="Save" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
