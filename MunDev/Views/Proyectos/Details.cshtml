@model MunDev.Models.Proyecto

@{
    ViewData["Title"] = "Detalles del Proyecto";
}

<h1 class="display-4 mb-4 text-primary">
    <i class="bi bi-info-circle"></i> @ViewData["Title"]
</h1>

<h4 class="mb-3">Información Completa</h4>
<hr />

<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.NombreProyecto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NombreProyecto)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FechaFinEstimada)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FechaFinEstimada)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EstadoProyecto)
        </dt>
        <dd class="col-sm-9">
            <span class="badge @(Model.EstadoProyecto == "Activo" ? "bg-success" : Model.EstadoProyecto == "Pendiente" ? "bg-warning text-dark" : "bg-info")">
                @Html.DisplayFor(model => model.EstadoProyecto)
            </span>
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.CreadoPorUsuario)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CreadoPorUsuario.NombreUsuario)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Equipo)
        </dt>
        <dd class="col-sm-9">
            @* Muestra el nombre del equipo, o "N/A" si es nulo *!*@
            @(Model.Equipo != null ? Html.DisplayFor(model => model.Equipo.NombreEquipo).ToString() : "N/A")
        </dd>
    </dl>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.ProyectoId" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left"></i> Volver a la Lista
    </a>
</div>
